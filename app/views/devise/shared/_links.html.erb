<%- if controller_name != 'sessions' %>
  <%= link_to t(:sign_in, scope: 'devise.links'), new_session_path(resource_name), class: 'btn btn-outline-primary btn-block font-weight-bold' %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(:sign_up, scope: 'devise.links'), new_registration_path(resource_name), class: 'btn btn-outline-primary btn-block font-weight-bold' %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(:forgot_your_password, scope: 'devise.links'), new_password_path(resource_name), class: 'btn btn-outline-primary btn-block font-weight-bold' %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(:did_not_receive_confirmation_instructions, scope: 'devise.links'), new_confirmation_path(resource_name), class: 'btn btn-outline-primary btn-block font-weight-bold' %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(:did_not_receive_unlock_instructions, scope: 'devise.links'), new_unlock_path(resource_name), class: 'btn btn-outline-primary btn-block font-weight-bold' %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to  t(:sign_in_with, provider: OmniAuth::Utils.camelize(provider), scope: 'devise.links'), omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline-primary btn-block font-weight-bold' %>
  <% end %>
<% end %>
